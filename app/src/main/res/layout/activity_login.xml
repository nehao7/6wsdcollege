<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FBC4AB"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="295dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prem Chand Markanda S.D. College for Women,"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="88dp"
        app:layout_constraintEnd_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintBottom_toTopOf="@id/image1"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jalandhar"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="98dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintBottom_toTopOf="@id/tv1"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Re-Accreditedwith‘A+’grade by NAAC)"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="98dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintBottom_toTopOf="@id/tv2"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#D45E5E"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your username"
        android:inputType="text"
        android:text="user@gmail.com"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtemail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter Roll no."
        android:visibility="gone"
        android:inputType="number"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Password"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1234@"
        android:text="12345678"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D45E5E"
        android:text="Login "
        android:textColor="#FFDAB9"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtpassword"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:layout_marginLeft="215dp"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        app:layout_constraintTop_toBottomOf="@+id/tv8"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/tvregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Now"
        app:layout_constraintEnd_toEndOf="@+id/tv9"
        app:layout_constraintBottom_toBottomOf="@+id/tv9"
        android:layout_marginLeft="250dp"
        android:textColor="#D45E5E"/>




</androidx.constraintlayout.widget.ConstraintLayout>