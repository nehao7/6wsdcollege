<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#B1C9EF"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="295dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prem_chand_markanda_s_d_college_for_women"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="88dp"
        app:layout_constraintEnd_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintBottom_toTopOf="@id/image1"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jalandhar"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="98dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintBottom_toTopOf="@id/tv1"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/re_accreditedwith_a_grade_by_naac"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="98dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintBottom_toTopOf="@id/tv2"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#395886"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_username"
        android:inputType="text"
        android:text="@string/user_gmail_com"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/roll_number"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/edtemail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_roll_no"
        android:visibility="gone"
        android:inputType="number"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/password"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/edt2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/_1234"
        android:text="@string/_12345678"
        android:textColorHint="#514E4E"
        android:backgroundTint="#979595"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#395886"
        android:text="@string/login1"
        android:textColor="#B1C9EF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edtpassword"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:layout_marginStart="215dp"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account"
        app:layout_constraintTop_toBottomOf="@+id/tv8"
        android:layout_marginTop="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Now"
        app:layout_constraintEnd_toEndOf="@+id/tv9"
        app:layout_constraintBottom_toBottomOf="@+id/tv9"
        android:layout_marginLeft="250dp"
        android:textColor="#395886"/>




</androidx.constraintlayout.widget.ConstraintLayout>